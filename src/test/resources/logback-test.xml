<configuration>
    <shutdownHook class="ch.qos.logback.core.hook.DelayingShutdownHook"/>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml" />

    <logger name="de.gematik.demis.notificationgateway" level="info" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="de.gematik.demis.token.services" level="debug" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="org.springframework.web.filter.CommonsRequestLoggingFilter" level="debug" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="net.serenitybdd" level="WARN">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="net.thucydides" level="WARN">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <root level="off">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>